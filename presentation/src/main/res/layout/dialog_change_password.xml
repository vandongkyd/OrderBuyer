<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/padding_normal"
    android:background="@drawable/dialog_background"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/change_password_title_background"
        android:gravity="center"
        android:padding="@dimen/padding_normal"
        android:text="@string/change_password_title"
        android:textColor="#FEFEFF"
        android:textSize="@dimen/text_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_normal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_background"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                fontPath="fonts/Linearicons.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_normal"
                android:text="\ue66b"
                android:textColor="#000"
                android:textSize="@dimen/text_headline"
                tools:ignore="MissingPrefix" />

            <EditText
                android:id="@+id/edt_old_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/change_password_old_password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="@dimen/padding_normal"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="@dimen/text_body" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_normal"
            android:background="@drawable/white_background"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                fontPath="fonts/Linearicons.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_normal"
                android:text="\ue66b"
                android:textColor="#000"
                android:textSize="@dimen/text_headline"
                tools:ignore="MissingPrefix" />

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/change_password_new_password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="@dimen/padding_normal"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="@dimen/text_body" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_normal"
            android:background="@drawable/white_background"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                fontPath="fonts/Linearicons.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_normal"
                android:text="\ue66b"
                android:textColor="#000"
                android:textSize="@dimen/text_headline"
                tools:ignore="MissingPrefix" />

            <EditText
                android:id="@+id/edt_password_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/change_password_confirm_password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="@dimen/padding_normal"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="@dimen/text_body" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_normal"
            android:background="@drawable/change_password_background"
            android:paddingLeft="@dimen/spacing_large"
            android:paddingRight="@dimen/spacing_large"
            android:stateListAnimator="@null"
            android:text="@string/change_password_update"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="@dimen/text_body" />

    </LinearLayout>

</LinearLayout>